# destroy everything!

# do something 
if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

# xrdb
[[ -f ~/.Xresources ]] && xrdb -merge -I$HOME ~/.Xresources

# magic
setxkbmap fi
xset s off
xset -dpms
xset r rate 350 45
xsetroot -cursor_name left_ptr
setxkbmap -option terminate:ctrl_alt_bksp

# autostart
autostart() {
   nitrogen --restore
   xmodmap .xmodmap
   xcmenu -d
   sxhkd &
   urxvtd -q -f -o
   redshift -l 64:25 -b 0.8:0.8 &> /dev/null &
}

# kill everyone
autokill() {
   killall xcmenu
   killall sxhkd
   killall urxvtd
   killall lemonbar
   killall redshift
}

# execute
autostart &
exec herbstluftwm
autokill; sleep 1
